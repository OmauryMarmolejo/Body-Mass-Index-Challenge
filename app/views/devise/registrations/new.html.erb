<div class="container" style= "margin-top: 30px">
  <br>
  <div class="col-md-12">
    <div class="modal-dialog" style="margin-botton:0">
      <div class="modal-content">
        <div class="panel-heading">
          <h3 class="panel-title">Sign in<h3>
        </div>
        <div class="panel-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <fieldset>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, placeholder: "email", type: "email", class: "form-control" %>
          </div>
          <div>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br/>
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password", type: "password" %>
          </div>
          <div class="actions">
            <br>
            <%= f.submit "Sign up", class: "btn btn-secondary btn-outline btn-sm"%><br>
            <%= render "users/shared/links" %>
          </div>
          <% end %>
         </fieldset>
        </div>
      </div>
    </div>
  </div>
</div>
