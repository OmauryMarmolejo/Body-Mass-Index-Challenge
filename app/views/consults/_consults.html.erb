<div class="row center">
  <h4 class="">History</h4>
  <hr>
    <div>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Height</th>
            <th>Weight</th>
            <th>BMI</th>
            <th>Date</th>
            <th>Category</th>
          </tr>
        </thead>
        <tbody>
        <% @consults.each do |consult| %>
          <tr>
            <td><%= consult.height %> cm</td>
            <td><%= consult.mass %> kg</td>
            <td><%= "%.2f" % consult.body_mass %></td>
            <td><%= consult.created_at.strftime("%Y-%m-%d") %></td>
           <% if consult.body_mass < 18.5 %>
            <td>Underweight</td>
           <% elsif consult.body_mass > 18.5 and consult.body_mass < 25 %>
            <td>Normal</td>
           <% elsif consult.body_mass > 25 and consult.body_mass < 30%>
            <td>Overweight</td>
           <% elsif consult.body_mass > 30 and consult.body_mass < 35 %>
            <td>Obese Class I</td>
           <% elsif consult.body_mass > 35 and consult.body_mass < 40%>
            <td>Obese Class II</td>
           <% elsif consult.body_mass > 40 %>
            <td>Obese Class III</td>
           <% end %>
          </tr>
        <% end %>

    </div>
</div>
